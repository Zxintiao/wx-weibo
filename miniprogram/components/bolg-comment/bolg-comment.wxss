.blog_comment{
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 2vw 1vw 1vw 4vw;
}
.comment_photo image{
    width: 10vw;
    height: 10vw;
    border-radius: 50%;
}
.comment_more{
    width: 85%;
    display: flex;
    flex-direction: column;
}
.comment_nickname{
    color: #6C6C6C;
}
.comment_content{
    color: #333333;
}
.comment_bar{
    color: #939393;
    font-size: 2.5vw;
    margin-top: 2.5vw;
    padding-bottom: 3vw;
    border-bottom: 0.5vw solid #E5E5E5;   
}
