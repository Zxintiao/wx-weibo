view{
    box-sizing: border-box;
}
.mine{
    background-color: #EEEEEE;
}
/* mine_bar */
.mine_bar{
    width: 750rpx;
    padding: 0 3vw;
    position: fixed;
    background-color: #F4F4F4;
    top: 0;
    display: flex;
    justify-content: space-between;
}
.mine_bar image{
    width: 7.5vw;
    height: 7.5vw;
}
.mine_add,.mine_set{
    width: 18vw;
    position: relative;
    top: 2vw;
}
.mine_title{
    font-size: 5vw;
    line-height: 10vw;
}
.mine_set{
    display: flex;
    justify-content: space-between;
}
/* mine_info */
.mine_info{
    margin-top: 14vw;
    background-color: #FEFEFE;
    padding: 0 3vw;
}
.mine_info_me{
   padding: 4vw 0 3vw 0;
   border-bottom: 1rpx solid #989898;
}
.mine_info_me,.mine_info_intro{
    display: flex;
    justify-content: space-between;
}
.mine_info_intro{
    font-size: 3.8vw;
    text-align: center;
    padding: 3vw 7vw;
}
.info_my{
    width: 70%;
}
.info_my view{
    display: inline-block;
    vertical-align: middle;
}
.info_my_name {
    font-size: 3vw;
}
.my_name{
    font-size: 4vw;
    font-weight: bolder;
}
.info_my_name text{
    margin: 1vw 2vw;
}
.my_intro{
    color:#989898;
}
.info_my view text{
    display: block;
}
.info_my_image image{
    width: 12vw;
    height: 12vw;
    border-radius: 50%;
}
.mine_vip image{
    width: 6vw;
    height: 6vw;
    margin: 3vw 1vw;    
    vertical-align: middle;
}
.mine_vip_show{
    font-size: 3vw;
    color: #ff7403;
}
.intro_blogs_name,.intro_attention_name,.intro_fans_name{
    color: #989898;
}
/* mine_more */
.mine_more{
    margin-top: 3vw;
    background-color: #FEFEFE;
    padding: 3vw;
}
.mine_more image{
    margin: 1vw 3vw;
    /* display: block; */
    width: 10vw;
    height: 10vw;
}
.mine_more text{
    /* display: block; */
    font-size: 3vw;
}
.mine_more_first{
    margin-bottom: 3vw;
}
.mine_more_first,.mine_more_second{
    display: flex;
    justify-content: space-between;
}
.mine_navigator{
    width: 16vw;
    text-align: center;
    display: flex;
    flex-direction: column;
}